div class="container-fluid"
  div class="row-fluid"
    div class="span12"
      br
      div class="row-fluid"
        h1 class="span2" id="name" = tag                
      div class="row-fluid"
        div class="span4"
        div class="span10" id="feed"
          ==render :slim, :"tweet_list", locals: {title: "Tweets with tag #{tag}", id: "tweets", offset: offset, tweets: tweets, validated: validated}
      javascript:
          $(function(){
            setInterval(function(){
              checkAndUpdate("tag", $("#name").text(), function(){
              loadTagUpdates("tweets", "feed", $("#name").text());
              });
              }, 5000);
              });